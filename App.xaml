<Application x:Class="DaggerTaskManager.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!-- keep ALL styles/brushes here -->
        <!-- Ghost chip button -->
        <Style x:Key="ChipButton"
               TargetType="Button">
            <Setter Property="Foreground"
                    Value="#CFE7FF"/>
            <Setter Property="Background"
                    Value="#162235"/>
            <Setter Property="BorderBrush"
                    Value="#2A3B55"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="10,6"/>
            <Setter Property="Margin"
                    Value="0,0,8,8"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Left"
                                              VerticalAlignment="Center"
                                              Margin="8,2"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver"
                         Value="True">
                    <Setter Property="Background"
                            Value="#1B2A40"/>
                    <Setter Property="BorderBrush"
                            Value="#334966"/>
                </Trigger>
                <Trigger Property="IsPressed"
                         Value="True">
                    <Setter Property="Opacity"
                            Value="0.85"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Theme brushes -->
        <SolidColorBrush x:Key="Bg.Base"
                         Color="#0F1115"/>
        <SolidColorBrush x:Key="Bg.Card"
                         Color="#14171F"/>
        <SolidColorBrush x:Key="Border.Mid"
                         Color="#232837"/>
        <SolidColorBrush x:Key="Text.Main"
                         Color="#E6EAF2"/>
        <SolidColorBrush x:Key="Text.Sub"
                         Color="#AAB2C0"/>
        <SolidColorBrush x:Key="Accent"
                         Color="#10A37F"/>

        <!-- Effects -->
        <DropShadowEffect x:Key="TileShadow"
                          Color="#3BA3FF"
                          BlurRadius="18"
                          ShadowDepth="0"
                          Opacity="0.22"/>
        <DropShadowEffect x:Key="TileShadow.Hover"
                          Color="#55B2FF"
                          BlurRadius="24"
                          ShadowDepth="0"
                          Opacity="0.32"/>
        <DropShadowEffect x:Key="CardShadow"
                          Color="#3BA3FF"
                          BlurRadius="22"
                          ShadowDepth="0"
                          Opacity="0.20"/>
        <DropShadowEffect x:Key="CardShadow.Hover"
                          Color="#55B2FF"
                          BlurRadius="28"
                          ShadowDepth="0"
                          Opacity="0.30"/>

        <!-- CTA button -->
        <Style x:Key="CtaButton"
               TargetType="Button">
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                CornerRadius="12"
                                Background="#1C2B3E"
                                BorderBrush="#2F3A54"
                                BorderThickness="1"
                                Padding="14,10"
                                Effect="{StaticResource CardShadow}">
                            <Grid VerticalAlignment="Center">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0"
                                           Text="&#xE122;"
                                           FontFamily="Segoe MDL2 Assets"
                                           Foreground="#CFE7FF"
                                           FontSize="16"
                                           VerticalAlignment="Center"
                                           Margin="0,0,8,0"/>
                                <ContentPresenter Grid.Column="1"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="bd"
                                        Property="Effect"
                                        Value="{StaticResource CardShadow.Hover}"/>
                                <Setter TargetName="bd"
                                        Property="Background"
                                        Value="#21314A"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="bd"
                                        Property="Opacity"
                                        Value="0.92"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground"
                    Value="#E6EAF2"/>
            <Setter Property="FontWeight"
                    Value="SemiBold"/>
        </Style>

        <!-- Caption -->
        <Style x:Key="Caption"
               TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="{StaticResource Text.Sub}"/>
            <Setter Property="FontSize"
                    Value="12"/>
        </Style>

        <!-- PromptBox -->
        <Style x:Key="PromptBox"
               TargetType="TextBox">
            <Setter Property="Background"
                    Value="#11161F"/>
            <Setter Property="Foreground"
                    Value="#E6EAF2"/>
            <Setter Property="BorderBrush"
                    Value="#2C3648"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="10"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="AcceptsReturn"
                    Value="True"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
            <Setter Property="MinHeight"
                    Value="64"/>
        </Style>

        <!-- Card -->
        <Style x:Key="Card"
               TargetType="Border">
            <Setter Property="Background"
                    Value="{StaticResource Bg.Card}"/>
            <Setter Property="CornerRadius"
                    Value="14"/>
            <Setter Property="Padding"
                    Value="16"/>
            <Setter Property="Margin"
                    Value="12"/>
            <Setter Property="BorderBrush"
                    Value="{StaticResource Border.Mid}"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="SnapsToDevicePixels"
                    Value="True"/>
        </Style>

        <!-- TileButton -->
        <Style x:Key="TileButton"
               TargetType="Button">
            <Setter Property="Foreground"
                    Value="{StaticResource Text.Main}"/>
            <Setter Property="FontSize"
                    Value="15"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="bd"
                                Background="{StaticResource Bg.Card}"
                                BorderBrush="{StaticResource Border.Mid}"
                                BorderThickness="1"
                                CornerRadius="16"
                                Margin="10"
                                Height="110"
                                Effect="{StaticResource TileShadow}">
                            <Grid Margin="14">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock x:Name="Icon"
                                           Text="{TemplateBinding Tag}"
                                           Foreground="{StaticResource Text.Sub}"
                                           FontFamily="Segoe MDL2 Assets"
                                           FontSize="24"
                                           Opacity="0.9"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"/>
                                <ContentPresenter Grid.Row="1"
                                                  HorizontalAlignment="Center"
                                                  VerticalAlignment="Bottom"
                                                  Margin="0,8,0,2"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                     Value="True">
                                <Setter TargetName="bd"
                                        Property="Effect"
                                        Value="{StaticResource TileShadow.Hover}"/>
                                <Setter TargetName="bd"
                                        Property="Background"
                                        Value="#161A23"/>
                                <Setter TargetName="bd"
                                        Property="BorderBrush"
                                        Value="#2F3A54"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                     Value="True">
                                <Setter TargetName="bd"
                                        Property="Opacity"
                                        Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled"
                                     Value="False">
                                <Setter TargetName="bd"
                                        Property="Opacity"
                                        Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarIconButton"
                TargetType="Button">
            <Setter Property="Height"
                    Value="46"/>
            <Setter Property="Width"
                    Value="46"/>
            <Setter Property="Foreground"
                    Value="#CFE7FF"/>
            <Setter Property="FontSize"
                    Value="20"/>
            <Setter Property="FontFamily"
                    Value="Segoe MDL2 Assets"/>
            <Setter Property="Background"
                    Value="Transparent"/>
            <Setter Property="BorderThickness"
                    Value="0"/>
            <Setter Property="Cursor"
                    Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver"
                                    Value="True">
                                <Setter Property="Background"
                                        Value="#1B2A40"/>
                            </Trigger>
                            <Trigger Property="IsPressed"
                                    Value="True">
                                <Setter Property="Background"
                                        Value="#21314A"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>




        <!-- DropShadowEffect, ChipButton, CtaButton, Card, TileButton, etc. -->
        <!-- copy ALL those styles you put in MainWindow.xaml here -->
    </Application.Resources>
</Application>

