<Window x:Class="DaggerTaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DaggerTaskManager"
        xmlns:self="clr-namespace:DaggerTaskManager"
        Title="DAG-GER Task Manager"
        Height="640"
        Width="980"
        Background="#0F1115"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <!-- Converters (declared before anything that uses them) -->
        <self:IntToVisibilityConverter x:Key="IntToVisibilityConverter"/>
        <self:InitialsConverter x:Key="InitialsConverter"/>

        <!-- Palette -->
        <SolidColorBrush x:Key="Bg0" Color="#0F1115"/>
        <SolidColorBrush x:Key="Bg1" Color="#131722"/>
        <SolidColorBrush x:Key="Bg2" Color="#1B2230"/>
        <SolidColorBrush x:Key="Accent" Color="#007ACC"/>
        <SolidColorBrush x:Key="Accent2" Color="#5FE3FF"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextMuted" Color="#9AA4B2"/>
        <SolidColorBrush x:Key="Ok" Color="#3DDC97"/>

        <!-- List item chrome -->
        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin"  Value="6,4"/>
            <Setter Property="Cursor"  Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="12">
                            <ContentPresenter Margin="8"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#212A3B"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="bd" Property="Background" Value="#1E334C"/>
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        </Style>

        <!-- Chat list item -->
        <DataTemplate x:Key="ChatItemTemplate">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="36"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Avatar with initials -->
                <Border Grid.Column="0"
                        Width="36" Height="36"
                        CornerRadius="18"
                        VerticalAlignment="Center"
                        Background="#2A3246">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center"
                               Text="{Binding Name, Converter={StaticResource InitialsConverter}, FallbackValue=🗨️}"
                               FontWeight="Bold"
                               Foreground="{StaticResource Accent2}"/>
                </Border>

                <!-- Name + preview -->
                <StackPanel Grid.Column="1" Margin="10,0,0,0">
                    <TextBlock Text="{Binding Name}" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock Text="{Binding LastMessagePreview}" FontSize="12"
                               Foreground="{StaticResource TextMuted}" TextTrimming="CharacterEllipsis"/>
                </StackPanel>

                <!-- Unread pill -->
                <Border Grid.Column="2"
                        Background="{StaticResource Accent}"
                        Padding="8,2"
                        CornerRadius="10"
                        Visibility="{Binding UnreadCount, Converter={StaticResource IntToVisibilityConverter}}">
                    <TextBlock Text="{Binding UnreadCount}" Foreground="White" FontSize="12" FontWeight="Bold"/>
                </Border>
            </Grid>
        </DataTemplate>
    </Window.Resources>

    <Grid Background="{StaticResource Bg0}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Sidebar -->
        <Border Grid.RowSpan="3" Grid.Column="0" Background="{StaticResource Bg1}">
            <DockPanel>
                <StackPanel DockPanel.Dock="Top" Margin="16,14">
                    <TextBlock Text="DAG-GER" Foreground="{StaticResource TextPrimary}" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Task Chats" Foreground="{StaticResource TextMuted}"/>
                    <Separator Margin="0,10,0,10"/>
                    <TextBox x:Name="SearchBox"
                             Background="{StaticResource Bg2}"
                             Foreground="{StaticResource TextPrimary}"
                             BorderThickness="0"
                             Padding="8"
                             FontSize="13"
                             TextChanged="SearchBox_TextChanged"
                             ToolTip="Filter chats…"/>
                </StackPanel>

                <ScrollViewer DockPanel.Dock="Top" VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="ChatList"
                             Background="{x:Null}"
                             BorderThickness="0"
                             ItemTemplate="{StaticResource ChatItemTemplate}"
                             SelectionChanged="ChatList_SelectionChanged"/>
                </ScrollViewer>

                <StackPanel DockPanel.Dock="Bottom" Margin="16" Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <Button Content="New Chat"
                            Click="NewChat_Click"
                            Padding="10,6"
                            Background="{StaticResource Accent}"
                            Foreground="White"
                            BorderThickness="0"
                            HorizontalAlignment="Stretch"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Header -->
        <DockPanel Grid.Column="1" Grid.Row="0" Background="{StaticResource Bg1}">
            <TextBlock Text="{Binding SelectedChatTitle}" Foreground="{StaticResource TextPrimary}"
                       FontSize="16" FontWeight="Bold"/>
            <TextBlock x:Name="UserNameBlock" Foreground="{StaticResource Accent2}"
                       Margin="10,0,0,0" VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Chat history -->
        <ScrollViewer x:Name="ChatScroll" Grid.Column="1" Grid.Row="1"
                      VerticalScrollBarVisibility="Auto" Background="{StaticResource Bg1}">
            <StackPanel x:Name="ChatPanel" Margin="10"/>
        </ScrollViewer>

        <!-- Input -->
        <Grid Grid.Column="1" Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputBox"
                     Grid.Column="0"
                     Background="{StaticResource Bg2}"
                     Foreground="{StaticResource TextPrimary}"
                     FontSize="14"
                     FontFamily="Segoe UI"
                     Padding="10"
                     BorderThickness="1"
                     BorderBrush="#2B3950"
                     VerticalAlignment="Center"
                     MinHeight="42"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     PreviewKeyDown="InputBox_PreviewKeyDown"/>

            <Button Grid.Column="1"
                    Content="Send"
                    Margin="8,0,0,0"
                    Padding="12,8"
                    Background="{StaticResource Accent}"
                    Foreground="White"
                    BorderThickness="0"
                    VerticalAlignment="Stretch"
                    Height="{Binding ActualHeight, ElementName=InputBox}"
                    Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Window>
