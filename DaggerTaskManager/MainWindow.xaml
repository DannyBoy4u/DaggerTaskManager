<Window x:Class="DaggerTaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="DAG-GER Task Manager"
        Height="600" Width="480"
        Background="#1e1e1e"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Style to highlight Calendar cells with Tag="Important" -->
        <Style TargetType="CalendarDayButton">
            <Style.Triggers>
                <Trigger Property="Tag" Value="Important">
                    <Setter Property="Background" Value="Red"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Calendar -->
            <RowDefinition Height="*"/>
            <!-- Chat area -->
            <RowDefinition Height="Auto"/>
            <!-- Input -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Background="#252526">
            <TextBlock Text="Task Chat"
                       Padding="10,0,0,0"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"/>
            <TextBlock x:Name="UserNameBlock"
                       Foreground="#9cdcfe"
                       Margin="10,0,0,0"
                       VerticalAlignment="Center"/>
        </DockPanel>

        <!-- Calendar & Due Tasks -->
        <Border Grid.Row="1"
                Background="#2d2d30"
                BorderBrush="#444"
                BorderThickness="1"
                Padding="8"
                Margin="0,4,0,4"
                CornerRadius="6">
            <StackPanel>
                <TextBlock Text="Task Calendar"
                           Foreground="White"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Margin="0,0,0,6"/>

                <Calendar x:Name="TaskCalendar"
                          Background="#1e1e1e"
                          Foreground="White"
                          BorderBrush="#555"
                          BorderThickness="1"
                          SelectionMode="SingleDate"
                          DisplayDate="{x:Static sys:DateTime.Now}"
                          SelectedDatesChanged="TaskCalendar_SelectedDatesChanged"/>

                <ListBox x:Name="DueDatesList"
                         Margin="0,8,0,0"
                         Background="#1e1e1e"
                         Foreground="White"
                         BorderBrush="#444"
                         BorderThickness="1"
                         Height="100">
                    <ListBoxItem Content="Select a date to see tasks..." IsEnabled="False"/>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- Chat history -->
        <ScrollViewer x:Name="ChatScroll"
                      Grid.Row="2"
                      VerticalScrollBarVisibility="Auto"
                      Background="#252526">
            <StackPanel x:Name="ChatPanel" Margin="10"/>
        </ScrollViewer>

        <!-- Input area -->
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBox x:Name="InputBox"
                     Grid.Column="0"
                     Background="#2d2d30"
                     Foreground="White"
                     FontSize="14"
                     FontFamily="Segoe UI"
                     Padding="8"
                     BorderThickness="1"
                     BorderBrush="Gray"
                     VerticalAlignment="Center"
                     MinHeight="40"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     PreviewKeyDown="InputBox_PreviewKeyDown"/>

            <Button Grid.Column="1"
                    Content="Send"
                    Margin="8,0,0,0"
                    Padding="10,6"
                    Background="#007acc"
                    Foreground="White"
                    BorderThickness="0"
                    VerticalAlignment="Stretch"
                    Height="{Binding ActualHeight, ElementName=InputBox}"
                    Click="SendButton_Click"/>
        </Grid>
    </Grid>
</Window>
