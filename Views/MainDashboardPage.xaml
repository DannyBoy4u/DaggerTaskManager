<Page x:Class="DaggerTaskManager.Views.MainDashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Background="{StaticResource Bg.Base}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ===== Top row ===== -->
        <Grid Grid.Row="0"
                Margin="14">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1.4*"/>
            </Grid.ColumnDefinitions>

            <!-- Hero: Task Chat (tightened) -->
            <Border Style="{StaticResource Card}"
                    Grid.Column="0"
                    Effect="{StaticResource CardShadow}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0"
                            EndPoint="1,1">
                        <GradientStop Color="#141B24"
                                Offset="0"/>
                        <GradientStop Color="#122029"
                                Offset="0.55"/>
                        <GradientStop Color="#10221D"
                                Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <!-- Two columns: Left content / Right recent chats -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>

                    <!-- LEFT COLUMN (with agile/status lines) -->
                    <Grid Grid.Column="0"
                            Margin="12,10,20,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <!-- header -->
                            <RowDefinition Height="Auto"/>
                            <!-- status stack -->
                            <RowDefinition Height="*"/>
                            <!-- spacer -->
                            <RowDefinition Height="Auto"/>
                            <!-- footer -->
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <TextBlock Grid.Row="0"
                                   Text="Task Manager"
                                   Foreground="{StaticResource Text.Main}"
                                   FontSize="24"
                                FontWeight="Bold"
                                   Margin="0,0,0,8"/>

                        <!-- Agile / Tasking Status (centered, same style as Active Chats) -->
                        <StackPanel Grid.Row="1"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Margin="0,4,0,0">

                            <!-- Current Release -->
                            <TextBlock Foreground="{StaticResource Text.Sub}"
                                    FontSize="12"
                                       HorizontalAlignment="Left"
                                    Margin="0,2">
            Current Release:
            <Run Text="{Binding ElementName=CurrentReleaseName, Path=Text}"
                                        Foreground="#CFE7FF"/>
                            </TextBlock>
                            <TextBlock x:Name="CurrentReleaseName"
                                    Text="Release 1.4"
                                    Visibility="Collapsed"/>

                            <!-- Current Sprint -->
                            <TextBlock Foreground="{StaticResource Text.Sub}"
                                    FontSize="12"
                                       HorizontalAlignment="Left"
                                    Margin="0,2">
            Current Sprint:
            <Run Text="{Binding ElementName=CurrentSprintName, Path=Text}"
                                        Foreground="#CFE7FF"/>
                            </TextBlock>
                            <TextBlock x:Name="CurrentSprintName"
                                    Text="Sprint 43 — UI Polish"
                                    Visibility="Collapsed"/>

                            <!-- Non-Prod Release Window -->
                            <TextBlock Foreground="{StaticResource Text.Sub}"
                                    FontSize="12"
                                       HorizontalAlignment="Left"
                                    Margin="0,2">
            Non-Prod Release Window:
            <Run Text="{Binding ElementName=NonProdWindow, Path=Text}"
                                        Foreground="#CFE7FF"/>
                            </TextBlock>
                            <TextBlock x:Name="NonProdWindow"
                                    Text="03/12/25 09:00 - 03/12/25 17:00"
                                    Visibility="Collapsed"/>

                            <!-- Prod Release Window -->

                            <TextBlock x:Name="ProdWindow"
                                    Text="03/14/25 22:00 - 03/15/25 02:00"
                                    Visibility="Collapsed"/>

                            <!-- Last QA Deployment -->
                            <TextBlock Foreground="{StaticResource Text.Sub}"
                                    FontSize="12"
                                       HorizontalAlignment="Left"
                                    Margin="0,2">
            Last QA Deployment:
            <Run Text="{Binding ElementName=LastQADeployment, Path=Text}"
                                        Foreground="#CFE7FF"/>
                            </TextBlock>
                            <TextBlock x:Name="LastQADeployment"
                                    Text="03/10/25 15:42"
                                    Visibility="Collapsed"/>

                            <!-- Unassigned Tasks Count -->
                            <TextBlock Foreground="{StaticResource Text.Sub}"
                                    FontSize="12"
                                       HorizontalAlignment="Left"
                                    Margin="0,2">
            Unassigned Tasks Count:
            <Run Text="{Binding ElementName=UnassignedTasksCount, Path=Text}"
                                        Foreground="#CFE7FF"/>
                            </TextBlock>
                            <TextBlock x:Name="UnassignedTasksCount"
                                    Text="4"
                                    Visibility="Collapsed"/>

                            <!-- Overdue Items Count -->
                            <TextBlock Foreground="{StaticResource Text.Sub}"
                                    FontSize="12"
                                       HorizontalAlignment="Left"
                                    Margin="0,2">
            Overdue Items Count:
            <Run Text="{Binding ElementName=OverdueItemsCount, Path=Text}"
                                        Foreground="#CFE7FF"/>
                            </TextBlock>
                            <TextBlock x:Name="OverdueItemsCount"
                                    Text="2"
                                    Visibility="Collapsed"/>

                        </StackPanel>

                        <!-- Spacer (Row 2) keeps footer at the bottom -->

                        <!-- Footer: Go to chat + Active Chats (center) -->
                        <Grid Grid.Row="3"
                                Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- CTA -->
                            <Button Grid.Column="0"
                                    Style="{StaticResource CtaButton}"
                                    Click="GoToChat_Click"
                                    Margin="0,0,12,0">
                                <TextBlock Text="Go to task chat"/>
                            </Button>

                            <!-- Centered status (same pattern as before) -->
                            <TextBlock Grid.Column="1"
                                       Text="Active Chats:  "
                                       Foreground="{StaticResource Text.Sub}"
                                       FontSize="12"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center">
            <Run/>
            <Run Text="{Binding ElementName=ActiveThreadsCount, Path=Text}"
                                        Foreground="#CFE7FF"/>
                            </TextBlock>

                            <!-- Hidden source for binding the number -->
                            <TextBlock Grid.Column="2"
                                       x:Name="ActiveThreadsCount"
                                       Text="3"
                                       Visibility="Collapsed"/>
                        </Grid>
                    </Grid>


                    <!-- RIGHT COLUMN: Recent Chats (dynamic) -->
                    <StackPanel Grid.Column="1"
                            Margin="10,10,10,10"
                            VerticalAlignment="Center">
                        <TextBlock Text="Recent Chats"
                                   Foreground="{StaticResource Text.Main}"
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,8"/>

                        <!-- Renders each chat title as a ChipButton -->
                        <ItemsControl x:Name="RecentChatsList"
                                ItemsSource="{Binding RecentChats}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Style="{StaticResource ChipButton}"
                                            Content="{Binding}"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Left"
                                            Padding="12,8"
                                            Margin="0,0,0,8"
                                            Click="RecentChat_Click"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                        </ItemsControl>

                        <!-- Secondary action -->
                        <Button Margin="0,10,0,0"
                                Padding="10,6"
                                Cursor="Hand"
                                Click="OpenThread_Click">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="10"
                                            Background="#1B2330"
                                            BorderBrush="#2F3A54"
                                            BorderThickness="1">
                                        <StackPanel Orientation="Horizontal"
                                                Margin="8,2">
                                            <TextBlock Text="&#xE8B7;"
                                                    FontFamily="Segoe MDL2 Assets"
                                                       Foreground="{StaticResource Text.Sub}"
                                                    Margin="0,0,6,0"/>
                                            <TextBlock Text="Open selected thread"
                                                    Foreground="{StaticResource Text.Main}"/>
                                        </StackPanel>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>

                </Grid>
            </Border>


            <!-- Side: Calendar placeholder -->
            <Border Style="{StaticResource Card}"
                    Grid.Column="1">
                <Grid>
                    <Grid.Background>
                        <LinearGradientBrush StartPoint="0,0"
                                EndPoint="1,1">
                            <GradientStop Color="#132338"
                                    Offset="0"/>
                            <GradientStop Color="#1E3A5C"
                                    Offset="1"/>
                        </LinearGradientBrush>
                    </Grid.Background>

                    <StackPanel Margin="12">
                        <TextBlock Text="Calendar"
                                   Foreground="#CFE7FF"
                                   FontWeight="Bold"
                                FontSize="18"
                                   Margin="0,0,0,10"/>

                        <!-- Weekday header -->
                        <UniformGrid Rows="1"
                                Columns="7"
                                Margin="0,0,0,6">
                            <TextBlock Text="Sun"
                                    Foreground="#AFC8E8"
                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="Mon"
                                    Foreground="#AFC8E8"
                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="Tue"
                                    Foreground="#AFC8E8"
                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="Wed"
                                    Foreground="#AFC8E8"
                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="Thu"
                                    Foreground="#AFC8E8"
                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="Fri"
                                    Foreground="#AFC8E8"
                                    HorizontalAlignment="Center"/>
                            <TextBlock Text="Sat"
                                    Foreground="#AFC8E8"
                                    HorizontalAlignment="Center"/>
                        </UniformGrid>

                        <!-- 6×7 grid (42 cells): days 1–31 + blanks -->
                        <UniformGrid Rows="6"
                                Columns="7">
                            <!-- Day cells -->
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="1"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="2"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="3"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="4"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="5"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="6"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="7"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>

                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="8"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="9"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="10"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="11"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="12"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="13"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="14"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>

                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="15"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="16"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="17"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="18"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="19"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="20"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="21"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>

                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="22"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="23"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="24"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="25"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="26"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="27"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="28"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>

                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="29"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="30"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>
                            <Border Background="#1B2738"
                                    Margin="2"
                                    CornerRadius="6">
                                <TextBlock Text="31"
                                        Foreground="#CFE7FF"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                            </Border>

                            <!-- Fill to 42 -->
                            <Border Background="#162235"
                                    Margin="2"
                                    CornerRadius="6"/>
                            <Border Background="#162235"
                                    Margin="2"
                                    CornerRadius="6"/>
                            <Border Background="#162235"
                                    Margin="2"
                                    CornerRadius="6"/>
                            <Border Background="#162235"
                                    Margin="2"
                                    CornerRadius="6"/>
                            <Border Background="#162235"
                                    Margin="2"
                                    CornerRadius="6"/>
                            <Border Background="#162235"
                                    Margin="2"
                                    CornerRadius="6"/>
                            <Border Background="#162235"
                                    Margin="2"
                                    CornerRadius="6"/>
                            <Border Background="#162235"
                                    Margin="2"
                                    CornerRadius="6"/>
                            <Border Background="#162235"
                                    Margin="2"
                                    CornerRadius="6"/>
                            <Border Background="#162235"
                                    Margin="2"
                                    CornerRadius="6"/>
                            <Border Background="#162235"
                                    Margin="2"
                                    CornerRadius="6"/>
                        </UniformGrid>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- ===== Bottom tiles ===== -->
        <StackPanel Grid.Row="1"
                Margin="14,0,14,16">

            <UniformGrid Columns="4">
                <Button Style="{StaticResource TileButton}"
                        Tag="&#xE710;"
                        Content="Add Tasks"
                        Click="AddTasks_Click"/>
                
                <Button Style="{StaticResource TileButton}"
                        Tag="&#xE9D9;"
                        Content="Status"
                        Click="Status_Click"/>
                <Button Style="{StaticResource TileButton}"
                        Tag="&#xECAA;"
                        Content="Add / Manage Plugins"
                        Click="Plugins_Click"/>
                <Button Style="{StaticResource TileButton}"
                        Tag="&#xE7B8;"
                        Content="View Archived"
                        Click="Archived_Click"/>
            </UniformGrid>
            <Grid x:Name="AddTaskInputPanel"
             Margin="0,10,0,0"
             Visibility="Collapsed">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- TextBox with themed styling -->
                <Grid Grid.Column="0">
                    <TextBox x:Name="TaskLinkTextBox"
                     Width="250"
                     Height="30"
                     VerticalAlignment="Center"
                     Background="#2d2d30"
                     Foreground="White"
                     BorderBrush="#444"
                     BorderThickness="1"
                     Padding="6"
                     FontSize="14"
                     FontFamily="Segoe UI"
                     TextChanged="TaskLinkTextBox_TextChanged"
                     PreviewKeyDown="TaskLinkTextBox_PreviewKeyDown"/>

                <!-- Placeholder text -->
                <TextBlock x:Name="TaskLinkPlaceholder"
                 Text="Enter task link..."
                 Foreground="#888"
                 VerticalAlignment="Center"
                 Margin="8,0,0,0"
                 FontSize="14"
                 IsHitTestVisible="False"
                 Visibility="Visible"/>
                </Grid>

                <!-- Enter button styled like TileButton -->
                <Button x:Name="SubmitTaskButton"
                 Grid.Column="1"
                 Content="Enter"
                 Width="80"
                 Height="30"
                 Margin="10,0,0,0"
                 VerticalAlignment="Center"
                 Background="#007acc"
                 Foreground="White"
                 BorderThickness="0"
                 FontWeight="SemiBold"
                 Cursor="Hand"
                 Click="SubmitTaskButton_Click"/>
            </Grid>
        </StackPanel>


    </Grid>
</Page>
